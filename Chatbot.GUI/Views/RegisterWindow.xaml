<Window x:Class="Chatbot.GUI.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Chatbot.GUI.Views"
        Title="Registrieren"
        Height="400"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Benutzername" />
            <TextBox Text="{Binding Username}" Margin="0,5"/>

            <TextBlock Text="Passwort" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" Margin="0,5" PasswordChanged="PasswordBox_PasswordChanged"/>

            <TextBlock Text="Passwort wiederholen" Margin="0,10,0,0"/>
            <PasswordBox x:Name="RepeatPasswordBox" Margin="0,5" PasswordChanged="RepeatPasswordBox_PasswordChanged"/>

            <Button Content="Registrieren"
                    Margin="0,20,0,0"
                    Height="35"
                    Command="{Binding RegisterCommand}"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Toolbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ollama Chat" Height="500" Width="600">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Response Display -->
        <TextBox Grid.Row="0" 
                 Text="{Binding Response}" 
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="14"
                 Margin="0,0,0,20"/>

        <!-- Input -->
        <TextBox Grid.Row="1" 
                 Text="{Binding Prompt, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="14"
                 Height="60"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,10"/>

        <!-- Send Button -->
        <Button Grid.Row="2" 
                Content="Send" 
                Command="{Binding SendCommand}"
                Height="40"
                FontSize="14"/>
    </Grid>
</Window>